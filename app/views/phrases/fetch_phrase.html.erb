<div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="row">
      <div class="col-sm-12">
        <h2 class="text-center">Fetch Phrases</h2>
      </div>
    </div>
    <hr>  
    <div class="row">
      <label class="error">
      </label>
    </div>
    <% if @phrase %>
      <div class="row">
        <label class="control-label col-sm-3" for="pwd"><strong>Title</strong></label>
        <div class="col-sm-9">          
          <label class="control-label"><strong>Description</strong></label>
        </div>
      </div>
      <div class="row" id="more-phrase" data-ids="<%= @phrase.id%>">
        <div class="col-sm-3"><%= @phrase.title %></div>
        <div class="col-sm-9"><%= @phrase.description%></div>
      </div> 
      <br>
      <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
          <div class="btn btn-primary" id= 'load_phrase'>
            <%= "Load #{@total_phrases} more"%>
          </div> 
        </div>
      </div>
    <% else %>
      <div class="row">
        <div class="col-sm-12"><strong>No record found</strong></div>
      </div> 
    <% end %>
  </div>
<div class="col-md-3"></div>